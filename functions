 function describeCountry (country, population, capitalCity){
     const land = `${country} has  ${population} milion people and it's capital city is ${capitalCity}`;
     return land;
 }

 const finland = describeCountry('Finland', 6 , 'Helsinky');
 console.log(finland);

 const croatia = describeCountry('Croatia', 5, 'Zagreb');
 console.log(croatia);

 const germany = describeCountry('Germany', 80, 'Berlin');
 console.log(germany); 

